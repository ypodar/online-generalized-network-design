import random

string = "ABCDEFGHIJKLMNOPQRSTUVWXYZ"


def networkGen():
    max_weight = 15
    max_nodes = 10
    network = []
    pairs = []
    edges = []
    num_edges = random.randint(max_nodes, (max_nodes * (max_nodes - 1)) / 2)

    for i in range(num_edges):
        weight = random.randint(1, max_weight)
        x = random.choice(string[:max_nodes])
        y = random.choice(string[:max_nodes])
        if x != y and (x, y) not in pairs:
            pairs.append((x, y))
            network.append((x, y, weight))
            if x not in edges:
                edges.append(x)
                network.append((x, '0', random.randint(max_weight + 1, max_weight * 2)))
                network.append(('0', x, random.randint(max_weight + 1, max_weight * 2)))
            if y not in edges:
                edges.append(y)
                network.append((y, '0', random.randint(max_weight + 1, max_weight * 2)))
                network.append(('0', y, random.randint(max_weight + 1, max_weight * 2)))
        else:
            i = i - 1
    return network


print(networkGen())
